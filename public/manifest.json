{
  "manifest_version": 2,
  "name": "unitool chrome extension",
  "version": "0.0.1.0",
  "description": "站内环境模拟插件",
  "background": {
    "page":"src/pages/background/index.html"
  },
  "browser_action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest",
    "webNavigation",
    "webRequestBlocking",
    "nativeMessaging",
    "debugger",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": ["http://*/*", "https://*/*"]
  },
  "web_accessible_resources": ["*.js"],
  "options_ui": {
    "page": "src/pages/options/index.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "content_security_policy": "default-src 'self' https://c.zhangle.com/; style-src 'self' 'unsafe-inline'; connect-src http://221.6.6.237:*; object-src 'self'"
}
