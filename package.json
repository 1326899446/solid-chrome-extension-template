        "babel-preset-solid": "^1.4.6",
        "eslint": "8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "6.6.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-solid": "^0.7.1",
        "fs-extra": "10.1.0",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "nodemon": "2.0.19",
        "prettier": "2.7.1",
        "sass": "1.53.0",
        "ts-jest": "^28.0.6",
